@model IList<CategoryModel>

@using Nop.Web.Models.Catalog;


<link href="~/Administration/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
<script src="~/Administration/Scripts/bootstrap/bootstrap.js"></script>
<style>
    img {
        width: 100%;
    }
</style>
@if (Model.Count > 0)
{
    <div class="row">
        <ul class="nav nav-tabs">
            @{
                int i = 1;
            }
            @foreach (var item in Model)
            {
            <li class="@(i==1?"active":"")"><a href="@("#tab"+i+"default")" data-toggle="tab">@item.Name</a></li>
                i++;
            }
            @*<li class="active"><a href="#tab1default" data-toggle="tab">Best Selling</a></li>
                <li><a href="#tab2default" data-toggle="tab">Electronics</a></li>
                <li><a href="#tab3default" data-toggle="tab">Supermarket</a></li>
                <li><a href="#tab4default" data-toggle="tab">Home & Furniture</a></li>*@
        </ul>

        <div class="panel-body">
            <div class="tab-content">
                @{
                    int j = 1;
                }
                @foreach (var item in Model)
                {
                    <div class="tab-pane fade @(j==1?"in active":"")" id="@("tab"+j+"default")">
                        <div class="col-lg-12">
                            <div class="col-lg-6">
                                <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                    <img src="@item.PictureModel.ImageUrl" />
                                    <h4>@item.Name</h4>
                                </a>
                            </div>
                            <div class="col-lg-6">
                                @foreach (var item1 in item.SubCategories)
                                {
                                    <div class="col-lg-6">
                                        <a href="@Url.RouteUrl("Category", new { SeName = item1.SeName })" title="@item1.PictureModel.Title">
                                            <img src="@item1.PictureModel.ImageUrl" />
                                            <h4>@item1.Name</h4>
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    j++;
                }

            </div>
        </div>
    </div>
